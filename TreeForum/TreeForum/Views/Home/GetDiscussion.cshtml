@model TreeForum.Models.Discussion

@{
    ViewData["Title"] = "GetDiscussion";
    var imgString = "../../images/" + Model.ImageFilename;

}



<div class="discussion-post container mt-5">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title mb-4">@Model.Title</h1>
            <p class="card-text text-muted">Posted on: <span>@Model.CreateDate</span></p>
            <div class="discussion-content mb-4">
                <p>@Model.Content</p>
            </div>
            <div class="discussion-image mb-4">
                <img src=@imgString class="img-fluid rounded" alt="Image related to discussion" />
            </div>

            <!--Comment Button -->
            <div class="new-comment-button text-center my-4">
                <a class="btn btn-primary" asp-area="" asp-controller="Comments" asp-action="Create">
                    Add New Comment
                </a>
            </div>

        </div>
    </div>

    <h2 class="mt-5">Comments</h2>
    <ul class="list-unstyled">
        <li class="mb-4">
            <div class="card p-4">
                <p><strong>User Name</strong> (Feb 7, 2025)</p>
                <p>This is a comment on the discussion post.</p>
            </div>
        </li>
        <!-- More comments here -->
    </ul>
</div>
