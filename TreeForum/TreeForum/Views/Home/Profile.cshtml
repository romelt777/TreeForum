
@{
    ViewData["Title"] = "Someones's Profile";

}

<h1 class="fw-bold mt-5 text-center">@ViewBag.profileUser.Name 's Profile</h1>

<div class="container mt-4">
    <div class="row">
        <!-- Profile Image Section -->
        <div class="col-md-4 text-center">
            @if (ViewBag.profileUser.ImageFilename == null || ViewBag.profileUser.ImageFilename == "")
            {
                <img src="~/images/default_user.jpg" class="img-fluid rounded-circle thumbnail_user" />
                
            }
            else
            {
                <img src="~/profile_img/@ViewBag.profileUser.ImageFilename" class="img-fluid rounded-circle thumbnail_user" />

            }
        </div>

        <!-- User Info Section -->
        <div class="col-md-8">
            <h3 class="mt-3">Profile Information</h3>
            <p><strong>Location:</strong> @(!string.IsNullOrEmpty(ViewBag.profileUser.Location) ? ViewBag.profileUser.Location : "Not provided")</p>

            <p><strong>Email:</strong> @ViewBag.profileUser.Email</p>

        </div>
    </div>

    <h1 class="fw-bold mt-5 text-center">@ViewBag.profileUser.Name 's Posts</h1>

     @* User'sDiscussions   *@
    <div class="mt-5">
        <h3 class="text-center">User's Posts</h3>
        @if (ViewBag.UserDiscussions != null && ViewBag.UserDiscussions.Count > 0)
        {
            <ul class="list-group">
                @foreach (var discussion in ViewBag.UserDiscussions)
                {
                    <li class="list-group-item">
                        Hello
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-center">No posts yet!</p>
        }
    </div>
</div>
