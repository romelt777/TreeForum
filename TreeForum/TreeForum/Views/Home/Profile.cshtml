
@{
    ViewData["Title"] = "Someones's Profile";

}

<h1 class="fw-bold mt-5 text-center">@Model.Name 's Profile</h1>

<div class="container mt-4">
    <div class="row">
        <!-- Profile Image Section -->
        <div class="col-md-4 text-center">
            @if (Model.ImageFilename == null || Model.ImageFilename == "")
            {
                <img src="~/images/default_user.jpg" class="img-fluid rounded-circle thumbnail_user" />
                
            }
            else
            {
                <img src="~/profile_img/@Model.ImageFilename" class="img-fluid rounded-circle thumbnail_user" />

            }
        </div>

        <!-- User Info Section -->
        <div class="col-md-8">
            <h3 class="mt-3">Profile Information</h3>
            <p><strong>Location:</strong> @(!string.IsNullOrEmpty(Model.Location) ? Model.Location : "Not provided")</p>

            <p><strong>Email:</strong> @Model.Email</p>

        </div>
    </div>

