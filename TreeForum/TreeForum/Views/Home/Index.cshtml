@{
    ViewData["Title"] = "Home Page";
}
@functions {
    public string GenerateRandomUsername()
    {
        return "User" + Guid.NewGuid().ToString("N").Substring(0, 8);
    }
}
<h1 class="fw-bold mt-5 text-center">Tree Discussion</h1>

<div class="text-center mb-4">
    The Internet's source for all tree knowledge <br />
    Powered by tree huggers everywhere.
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Create">Create New Discussion</a>


<div class="container min-vh-100 p-4">
    <main class="d-flex flex-column align-items-center gap-5">
        <ul class="list-unstyled w-100">
            @foreach (var item in Model)
            {
                <li key="@item.DiscussionId" class="mb-4">
                    <a class="text-decoration-none"  href="@Url.Action("GetDiscussion", "Home", new { id = item.DiscussionId })">
                        <div class="card shadow-sm w-100">
                            <div class="container">
                                <div class="row">
                                    <div class="col-4">
                                        @if (!string.IsNullOrEmpty(item.ImageFilename))
                                        {
                                            string imageUrl = Url.Content("/images/" + item.ImageFilename);
                                            <img src="@imageUrl" class="img-fluid thumbnail" alt="@item.Title" />
                                        }else{
                                            <img src="~/images/default_tree.jpg" class="img-fluid thumbnail" alt="@item.Title" />
                                        }
                                    </div>
                                    <div class="col-4">
                                        <h5 class="card-title mb-0 text-decoration-underline">@item.Title</h5>
                                    </div>
                                    <div class="col-4">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <p>@GenerateRandomUsername()</p>
                                    </div>
                                    <div class="col-4">
                                        <h6 class="card-subtitle mb-0 text-muted">@item.CreateDate</h6>
                                    </div>
                                    <div class="col-4">
                                        @{
                                            int numComments = 0;
                                            if (item.Comments != null)
                                            {
                                                numComments = item.Comments.Count;
                                            }
                                        }
                                        <p class="d-flex align-items-center">
                                            <i class="fa-regular fa-comment me-2"></i>
                                            <span class="text-muted">@numComments</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </main>
</div>
