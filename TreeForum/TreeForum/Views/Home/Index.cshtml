@{
    ViewData["Title"] = "Home Page";
}
<h1 class="fw-bold mt-5 text-center">Tree Discussion</h1>

<div class="text-center mb-4">
    The Internet's source for all tree knowledge <br />
    Powered by tree huggers everywhere.
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Discussions" asp-action="Create">Create New Discussion</a>


<div class="container min-vh-100 p-4">
    <main class="d-flex flex-column align-items-center gap-5">
        <ul class="list-unstyled w-100">
            @foreach (var item in Model)
            {
                string imageUrl = Url.Content("/images/" + item.ImageFilename);
                <li key="@item.DiscussionId" class="mb-4">
                    <div class="card shadow-sm w-100">
                        <a href="@Url.Action("GetDiscussion", "Home", new { id = item.DiscussionId })">
                            <img src="@imageUrl" class="card-img-top img-fluid thumbnail" alt="@item.Title" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.CreateDate</h6>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </main>
</div>
