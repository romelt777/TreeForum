@{
    ViewData["Title"] = "Home Page";
}

<h1 class="fw-bold mt-5">Tree Discussion</h1>

<div class="mb-4">
	The Internet's source for all tree knowledge <br />
	Powered by tree huggers everywhere.
</div>

<div class="grid grid-rows-[20px_1fr_20px] items-center justify-items-center min-h-screen p-8 pb-20 gap-16 sm:p-20 font-[family-name:var(--font-geist-sans)]">
    <main class="flex flex-col gap-8 row-start-2 items-center sm:items-start">

        <ul class="flex flex-wrap list-none p-0">
            @foreach (var item in Model)
            {
                string imageUrl = Url.Content("/images/" + item.ImageFilename);
                <li key="@item.DiscussionId" class="bg-amber-200 p-6 rounded-xl shadow-lg w-full flex items-center space-x-4">
                    <a href="@Url.Action("PhotoDetails", "Home", new { id = item.DiscussionId })">
                        <img src="@imageUrl" class="img-fluid thumbnail" alt="@item.Title" />
                    </a>
                    <div>
                        <h3>@item.Title</h3>
                        <h4>@item.CreateDate</h4>
                    </div>
                </li>
            }
        </ul>
    </main>
</div>
